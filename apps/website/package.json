{
	"name": "@7tv/website",
	"private": true,
	"license": "Apache-2.0 with Commons Clause",
	"scripts": {
		"dev": "pnpm run codegen && vite dev --port 4173",
		"build": "pnpm run codegen && pnpm run svelte:check && vite build",
		"preview": "vite preview --port 4173",
		"lint": "pnpm run codegen && eslint . && pnpm run svelte:check && prettier --check \"**/*\" -u",
		"svelte:check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"svelte:check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write \"**/*\" -u",
		"codegen": "graphql-codegen --config codegen.ts"
	},
	"type": "module",
	"devDependencies": {
		"@eslint/js": "^9.16.0",
		"@fortawesome/free-brands-svg-icons": "^6.7.1",
		"@fortawesome/free-regular-svg-icons": "^6.7.1",
		"@graphql-codegen/cli": "^5.0.3",
		"@graphql-codegen/client-preset": "^4.5.1",
		"@graphql-typed-document-node/core": "^3.2.0",
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/kit": "^2.11.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.3",
		"@types/sharedworker": "^0.0.132",
		"@urql/exchange-auth": "^2.2.0",
		"@urql/svelte": "^4.2.2",
		"eslint": "^9.16.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.13.0",
		"graphology": "^0.25.4",
		"graphology-layout-forceatlas2": "^0.10.1",
		"graphql": "^16.9.0",
		"id128": "^1.6.6",
		"moment": "^2.30.1",
		"phosphor-svelte": "^2.0.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"sass": "^1.82.0",
		"sigma": "^3.0.0",
		"svelte": "^5.11.2",
		"svelte-check": "^4.1.1",
		"svelte-fa": "^4.0.3",
		"svelte-i18n": "^4.0.1",
		"svelte-infinite-loading": "^1.4.0",
		"svelte2tsx": "^0.7.30",
		"tslib": "^2.8.1",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.0",
		"vite": "^5.4.12",
		"svelte-eslint-parser": "^0.43.0"
	}
}
